<script>
    $(document).ready(function () {
        $(".clearbtn").hide();
        $('#anchBack').attr('href', '@backUrl');
        $('.printbtn1').remove();
        $('.emailbtn').remove();
       
        $.ajax({
            url: '/Recruitment/CancelDelete',
            dataType: "json",
            type: "GET",
            contentType: 'application/json; charset=utf-8',
            data: {
                RowId: @Request["hdnId"], EmpId:@Session["EmpId"],Operation: 15
            },
            success: function (data) {
                var results = $.parseJSON(data);
                LoadDdls('/Recruitment/BindDropdown?RowId='+results[0].InterviewerStatusId+'&Operation=24', $('#ddlApplstatus'), 'ApplicantStatusId', 'StatusName');
                //$('#ddlApplstatus option[value="'+results[0].FK_ApplicantIdStatus+'"]').attr('selected','selected');
                
                $('#txtInterviewee').val(results[0].Name);
                $('#txtInterviewee').attr("disabled",'disabled');
                $('#txtPosition').val(results[0].JobTitle);
                $('#txtPosition').attr("disabled",'disabled');
                $('#txtInterviewer').val(results[0].InterViewerName);
                $('#txtInterviewer').attr("disabled",'disabled');
                $('#hdnSchduleId').val(results[0].CreateIntrviewId);
                $('#hdnInterviewerId').val(results[0].InterviewerId);
                if('@Act'=="view"){
                    $.ajax({
                        url: '/Recruitment/CancelDelete',
                        dataType: "json",
                        type: "GET",
                        contentType: 'application/json; charset=utf-8',
                        data: {
                            RowId: results[0].CreateIntrviewId,EmpId:results[0].InterviewerId, Operation: 11
                        },
                        success: function (data) {
                            var results = $.parseJSON(data);
                            if(results.Result==undefined||results.Result==null||results.Result!="Error"){
                                if(parseInt(results[0].TechinicalAbility)>0){
                                    for(var i=1;i<=parseInt(results[0].TechinicalAbility);i++)
                                        $('#divTechAb').find('input[value="'+i+'"]').prop('checked',true);
                                }
                                if(parseInt(results[0].InterpersonalSkills)>0){
                                    for(var i=1;i<=parseInt(results[0].InterpersonalSkills);i++)
                                        $('#divInterSk').find('input[value="'+i+'"]').prop('checked',true);
                                }
                                if(parseInt(results[0].PresentaitonSkills)>0){
                                    for(var i=1;i<=parseInt(results[0].PresentaitonSkills);i++)
                                        $('#divPresentSk').find('input[value="'+i+'"]').prop('checked',true);
                                }
                                if(parseInt(results[0].LeadershipSkills)>0){
                                    for(var i=1;i<=parseInt(results[0].LeadershipSkills);i++)
                                        $('#divLeaderSk').find('input[value="'+i+'"]').prop('checked',true);
                                }
                                if(parseInt(results[0].Teamwork)>0){
                                    for(var i=1;i<=parseInt(results[0].Teamwork);i++)
                                        $('#divTeam').find('input[value="'+i+'"]').prop('checked',true);
                                }
                                $('#ddlApplstatus option').remove();
                                $('#ddlApplstatus').append('<option value="1">'+results[0].StatusName+'</option>');
                                $('#ddlApplstatus').attr('value','1');
                                $('#txtIntComments').val(results[0].Comments);
                                $('#assessRating').find('input[type="radio"]').prop('disabled',true);
                                $('#ddlApplstatus').attr('disabled','disabled');
                                $('#txtIntComments').attr('disabled','disabled');
                            }
                
                        }
                    });
                }              
            },
            error: function (xhr) {
            }
        });        
    });

    function saveAssessment() {
        var personal = $('#divInterSk').find('input:checked').length>0?$('#divInterSk').find('input:checked').val():0;
        var leader=$('#divLeaderSk').find('input:checked').length>0?$('#divLeaderSk').find('input:checked').val():0;
        var present=$('#divPresentSk').find('input:checked').length>0?$('#divPresentSk').find('input:checked').val():0;
        var team=$('#divTeam').find('input:checked').length>0?$('#divTeam').find('input:checked').val():0;
        var tech=$('#divTechAb').find('input:checked').length>0?$('#divTechAb').find('input:checked').val():0;
        if($('#ddlApplstatus option:selected').val()!=''){
            $('#ddlApplstatus').removeClass("ErrorFocus");
            if(personal>0||leader>0||present>0||team>0||tech>0){
                $('#lblMsg')[0].innerText = "";
                var dtAssess = [{ Interviewer:$('#hdnInterviewerId').val(),Schedule:$('#hdnSchduleId').val(),Interpersonal:personal,Leadership:leader,Presentation:present,Teamwork:team,TechAbility:tech,Comments:$('#txtIntComments').val(),Status:$('#ddlApplstatus option:selected').val()}];
                $.ajax({
                    url: '/Recruitment/SaveAssessment',
                    type: 'POST',
                    dataType: 'json',
                    data: {
                        AssessId:0,
                        JsonStr: JSON.stringify(dtAssess)
                    },
                    success: function (data) {
                        var result = JSON.parse(data);
                        if(result.Result==undefined||result.Result==null||result.Result!="Error"){
                            $('#lblMsg').attr("class","lblMessage");
                            $('#lblMsg')[0].innerText = "Assessment Submitted Successfully";
                            if($('#updateDlg').length>0){
                                UpdateStatus();
                                $('#updateDlg').parent().remove();
                            }
                            if($('#statusDlg').length>0){
                                $('#statusDlg').parent().remove();
                                window.location.reload();
                            }
                        }
                    },
                    error: function () {
                    }
                });            
            }
            else{
                $('#lblMsg')[0].innerText = "Please give value for atleast one criteria";
            }
        }
        else{
            $('#lblMsg')[0].innerText = "Please fill all mandatory fields";
            $('#ddlApplstatus').focus();
            $('#ddlApplstatus').addClass("ErrorFocus");
        }
    }

    function clearValues(){
        $('#ddlApplstatus option[value=""]').attr('selected','selected');
        $('#ddlApplstatus').attr('value','');
        $('#txtIntComments').val("");
        $('#lblMsg')[0].innerText = "";
        $('#divInterSk').find('input:checked').prop('checked',false);
        $('#divLeaderSk').find('input:checked').prop('checked',false);
        $('#divPresentSk').find('input:checked').prop('checked',false);
        $('#divTeam').find('input:checked').prop('checked',false);
        $('#divTechAb').find('input:checked').prop('checked',false);
    }
</script>