<script>
    $(document).ready(function () {
        DefineCompetancies($("#listPrimarySkills"), $('#txtPrimarySkills'));
        DefineCompetancies($("#listSecondarySkills"), $('#txtSecondarySkills'));
        DefineCompetancies($("#listReqDocs"), $('#txtReqDocs'));
        LoadDdls("/USRecruitment/GetPositionType", $('#ddlPositionType'), "TypeId", "TypeName");
        LoadDdls("/USRecruitment/GetIndustry", $('#ddlIndustry'), "IndustryId", "IndustryName");
        $('.submitbtn').click(function () {
            SaveToDB(1);
        });
        $('.submitandnewbtn').click(function () {
            SaveToDB(0);
        });
        $('.clearbtn').click(function () {
            ClearAllControlValues('divClear');
        });
        DefineDatePicker($('#txtTargetDate'));
        $('#fileReqDocUpload').change(function () {
            var fileElement = $(this);
            var expDocUpload = fileElement.get(0);
            var expDocFiles = expDocUpload.files;
            if (expDocFiles.length > 0) {
                var ExpAttachments = new FormData();
                for (i = 0; i < expDocFiles.length; i++) {
                    ExpAttachments.append(expDocFiles[i].name, expDocFiles[i]);
                }
                $.ajax({
                    url: '/EmpInfoUserView/UploadFiles',
                    type: "POST",
                    async: false,
                    contentType: false,
                    processData: false,
                    data: ExpAttachments,
                    success: function (result) {
                        var json = $.parseJSON(result);
                        if (json["Error"] == undefined || json["Error"] == null) {
                            for (var i = 0; i < expDocFiles.length; i++) {
                                $('#filehidden').val($('#filehidden').val() + json[expDocFiles[i].name] + "||");
                                CheckExtension($('.docDiv'), expDocFiles[i].name, json[expDocFiles[i].name],
                                    "<a href='#'><div title='Close' class='documentclosebutton closeImage'>X</div></a>", null, 1);
                                PreventDefaultClick();
                            }
                        }
                    },
                    error: function (err) {
                        //alert(err.statusText);
                    }
                });
                fileElement.val('');
            }
        });
    });
    function defineExpUploads() {
        $('.closeImage').click(function () {
            var filepath = $(this).closest('.profilethumbnaildiv').find('.filehidden').val();
            $('#filehidden').val($('#filehidden').val().replace(filepath + '||', ''));
            $(this).closest('.profilethumbnaildiv').parent().remove();
        });
    }

    function SaveToDB(flag) {
        if (ValidateAll('divClear', 'lblMessage')) {
            var newdate = new Date();
            newdate.setDate(newdate.getDate() + 14);
            $.ajax({
                url: '/USRecruitment/SaveOpportunity',
                type: 'GET',
                dataType: 'json',
                data: {
                    OppId: 0, ClientName: $('#txtClientName').val(), ContactPerson: $('#txtContactPerson').val(), Location: $('#txtLocation').val(),
                    NoOfOpenings: $('#txtNoOfOpenings').val() != "" ? parseInt($('#txtNoOfOpenings').val()) : 1,
                    Street: $('#txtStreet').val(), City: $('#txtCity').val(), State: $('#txtState').val(),
                    Country: $('#txtCountry').val(), Zip: $('#txtZip').val(), Contact1: $('#txtContact1').val(), Contact2: $('#txtContact2').val(),
                    Email: $('#txtEmail').val(), Fax: $('#txtFax').val(), Website: $('#txtWebsite').val(), PositionTitle: $('#txtPositionTitle').val(),
                    WorkExp: $('#txtWorkExp').val(), Rate: $('#txtRate').val(),
                    Hours: $("#txtHours").val() != "" ? parseFloat($("#txtHours").val()) : 0,
                    PositionType: $("#ddlPositionType").val() == "" ? 0 : $("#ddlPositionType").val(), ProfileType: $('#txtProfileType').val(),
                    Industry: $('#ddlIndustry').val() == "" ? 0 : $('#ddlIndustry').val(),
                    TargetDate: $("#txtTargetDate").val() == "" ? (FormatDate(newdate, "yyyy/mm/dd")) : (FormatDate($("#txtTargetDate").val(), "yyyy/mm/dd")),
                    Note: $('#txtNote').val(), AttachmentPath: $("#filehidden").val(), JobDescription: $('#txtDescription').val(), Operation: 1
                },
                success: function (data) {
                    var returnval = $.parseJSON(data);
                    var OppId = parseInt(returnval[0]["OppId"]);
                    if (OppId > 0) {
                        var dtReqSkillsArray = new Array();
                        $('#listPrimarySkills').find(".divcompetancy").each(function () {
                            dtReqSkillsArray.push({ "FKOpportunityId": OppId, "Skill": $(this).text(), "TypeId": 0 });
                        });
                        $('#listSecondarySkills').find(".divcompetancy").each(function () {
                            dtReqSkillsArray.push({ "FKOpportunityId": OppId, "Skill": $(this).text(), "TypeId": 1 });
                        });
                        //if (dtReqSkillsArray.length > 0) {
                            $.ajax({
                                url: '/USRecruitment/SaveSkills',
                                type: 'POST',
                                async: false,
                                dataType: 'json',
                                data: {
                                    OppId: OppId,
                                    jsonData: JSON.stringify(dtReqSkillsArray)
                                },
                                success: function (data) {

                                },
                                error: function () {
                                    //alert('error');
                                }
                            });
                        //}
                        var dtReqDocsArray = new Array();
                        $('#listReqDocs').find(".divcompetancy").each(function () {
                            dtReqDocsArray.push({ "Fk_OppId": OppId, "DocType": $(this).text() });
                        });
                        //if (dtReqDocsArray.length > 0) {
                            $.ajax({
                                url: '/USRecruitment/SaveReqDocs',
                                type: 'POST',
                                async: false,
                                dataType: 'json',
                                data: {
                                    OppId: OppId,
                                    jsonData: JSON.stringify(dtReqDocsArray)
                                },
                                success: function (data) {

                                    //ClearAllControlValues('divClear');
                                    //$('#lblMessage').addClass('lblMessage');
                                    //$('#lblMessage').removeClass('lblError');
                                    //$('#lblMessage').text("Opportunity added successfully");
                                },
                                error: function () {
                                    //alert('error');
                                }
                            });
                        //}
                        ClearAllControlValues('divClear');
                        $('#lblMessage').addClass('lblMessage');
                        $('#lblMessage').removeClass('lblError');
                        $('#lblMessage').text("Opportunity created successfully");
                        if (flag == 1) {
                            document.getElementById("hrefBack").click();
                        }
                    }
                    else {
                        $('#lblMessage').removeClass('lblMessage');
                        $('#lblMessage').addClass('lblError');
                        $('#lblMessage').text("Opportunity Save failed");
                    }
                },
                error: function () {
                    //alert('error');
                }
            });
        }
    }
</script>
 


