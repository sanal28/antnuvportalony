    });
    function getAllReimbursementsforID() {
        //$("#tblAllReimbursements").find("tr:gt(0)").remove();
        var attachmentIcon = '';
        var optionalCancelLink = '';
        OffsetVal = ((CurrentPageId - 1) * RowCount);
        $.ajax({
            url: '/Home/GetGridData',
            type: "POST",
            dataType: 'json',
            data: { jsonData: JSON.stringify(dictReimbursementArray), Operation: 10, ProjId: 0, TypeId: 2, OffSet: OffsetVal, RowCount: RowCount },
            success: function (result) {
                var resultVals = $.parseJSON(result);
                //var SDateVal = "", EDateVal = "";
                $('#tblAllReimbursements > tbody').children("tr:gt(0)").remove();
                if (resultVals["Result"] == undefined || resultVals["Result"] == null) {
                    if (resultVals[0]["TotalRowCount"] % 10 == 0)
                        PageCount = resultVals[0]["TotalRowCount"] / 10;
                    else
                        PageCount = Math.floor(resultVals[0]["TotalRowCount"] / 10) + 1;
                    disableButtons($('#LSTbtn'), $('#NXTbtn'), $('#FRSTbtn'), $('#PRVbtn'), PageCount, CurrentPageId);
                    showAndHidePages(PageCount, CurrentPageId, $('.paginationbtndivNum > a'), '.pgNumber');
                    for (var i = 0; i < resultVals.length; i++) {
                        //SDateVal = FormatDate(resultVals[i]["StartDate"], "mm/dd/yyyy");
                        //SDateVal = SDateVal == "01/01/1753" ? "" : SDateVal;
                        //EDateVal = FormatDate(resultVals[i]["EndDate"], "mm/dd/yyyy");
                        //EDateVal = EDateVal == "01/01/1753" ? "" : EDateVal;
                        var SDateVal = FormatDate(resultVals[i]["StartDate"], "mm/dd/yyyy") == "01/01/1753" ? "NA" : FormatDate(resultVals[i]["StartDate"], "mm/dd/yyyy");
                        var EDateVal = FormatDate(resultVals[i]["EndDate"], "mm/dd/yyyy") == "01/01/1753" ? "NA" : FormatDate(resultVals[i]["EndDate"], "mm/dd/yyyy");
                        if (resultVals[i]["Attachments"] != '')
                            attachmentIcon = '<img title="Attachments" src="../Images/attachment-icon.png" width="14" height="14" alt="">';
                        else attachmentIcon = '';
                        if (resultVals[i]["TicketStatusId"] == 1)
                            optionalCancelLink = '<a class="PreventHref" onclick="cancelExistingReimbursements(' + resultVals[i]["ReimbursementId"] + ')"  href="#">Cancel</a>';
                        else
                            optionalCancelLink = "";
                        $('#tblAllReimbursements').append('<tr class="requestgriddiv2" ><td class="requestgridsubheader">' + attachmentIcon +
                            '</td><td class="requestgridsubheader" ><a href="#" onclick="updateFormData(' + resultVals[i]["ReimbursementId"] + ')" > ' + resultVals[i]["CategoryName"] +
                            '</a></td><td class="requestgridsubheader">' + resultVals[i]["Description"] + '</td><td class="requestgridsubheader" >' +
                            SDateVal + '</td><td class="requestgridsubheader" >' +
                            EDateVal + '</td><td class="requestgridsubheader">' + resultVals[i]["Amount"] +
                            '</td><td class="requestgridsubheader">' + resultVals[i]["TicketStatus"] + '</td><td class="requestgridsubheader" >' + optionalCancelLink +
                            '</td></tr>');
                    }
                    $('#divPageReimbursement').show();
                }
                else
                {
                        $('#divPageReimbursement').hide();
                        $('#tblAllReimbursements').append("<tr><td colspan='8' class='NoRecordsFound'>No Records Found</td></tr>");

                }
                PreventDefaultClick();
            },
            error: function (err) {
                //alert(err.statusText);
            }
        });
    }
    function getAllReimbursementsforIDFilter() {
        $.ajax({
