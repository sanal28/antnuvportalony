            type: "POST",
            dataType: 'json',
            data: { jsonData: JSON.stringify(dictReimbursementArray), Operation: 10, ProjId: 0, TypeId: 2, OffSet: 0, RowCount: 0 },
            success: function (result) {
                var resultVals = $.parseJSON(result);
                if (resultVals["Result"] == undefined || resultVals["Result"] == null) {
                    for (var i = 0; i < resultVals.length; i++) {
                        var SDateVal = FormatDate(resultVals[i]["StartDate"], "mm/dd/yyyy") == "01/01/1753" ? "NA" : FormatDate(resultVals[i]["StartDate"], "mm/dd/yyyy");
                        var EDateVal = FormatDate(resultVals[i]["EndDate"], "mm/dd/yyyy") == "01/01/1753" ? "NA" : FormatDate(resultVals[i]["EndDate"], "mm/dd/yyyy");
                            CreateCheckBox($('#cbReimbursementType'), resultVals[i]["CategoryName"], 'Field1Xml');
                            CreateCheckBox($('#cbReimbStartDate'), SDateVal, 'Field2Xml');
                            CreateCheckBox($('#cbReimbEndDate'), EDateVal, 'Field3Xml');
                            CreateCheckBox($('#cbReimbAmount'), resultVals[i]["Amount"], 'Field4Xml');
                            CreateCheckBox($('#cbReimbStatus'), resultVals[i]["TicketStatus"], 'Field5Xml');
                            DefineCheckboxClicks();
